@import 'movielist/movielist-template.wxss';
@import 'movie-grid/moviegrid-template.wxss';
.movies-container{
  background:#f2f2f2;
}
.movies-container  .list-container{
  margin-bottom: 30rpx;
}
.search-list{
  height:1200rpx;
}
.search{
  background-color: #f2f2f2;
  height: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.search-img{
  margin-left:20rpx;
}
.search input{
  height: 100%;
  width: 580rpx;
  margin-left: 20px;
  font-size: 28rpx;
}
.placeholder {
  font-size: 14px;
  color: #d1d1d1;
  margin-left: 20rpx;
}
.close{
  padding:20rpx;
}