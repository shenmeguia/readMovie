@import '../star/star-template.wxss';

.movie-detail-container {
  display: flex;
  flex-direction: column;
}

.head-img {
  width: 100%;
  height: 320rpx;
  -webkit-filter: blur(20px);
}

.head-content {
  position: absolute;
  left: 0;
  top: 0;
  display: flex;
  flex-direction: column;
  padding-left: 40rpx;
}

.main-title {
  font-size: 20px;
  font-weight: bold;
  margin-top: 50rpx;
  letter-spacing: 2px;
  color: white;
  width:530rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.sub-title {
  font-size: 28rpx;
  margin: 30rpx 0;
  color: white;
}

.like {
  display: flex;
  flex-direction: row;
  font-size: 22rpx;
}

.high-text {
  color: #f21146;
  margin-right: 10rpx;
}

.plain-text {
  color: #666;
  margin-right: 30rpx;
}

.movie-img {
  position: absolute;
  right: 30rpx;
  top: 160rpx;
  width: 175rpx;
  height: 238rpx;
}

.summary {
  margin-left: 40rpx;
  margin-top: 40rpx;
  color: #777;
}

.original-title {
  color: #1f3463;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
  display: block;
  width:510rpx;
}

.summary > view {
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
}

.summary > view > text:first-child {
  color: #999;
  margin-right: 30rpx;
}

.hr {
  width: 100%;
  height: 1px;
  background: #d9d9d9;
  margin-top: 45rpx;
}

.synopsis {
  display: flex;
  flex-direction: column;
  margin: 50rpx 0 0 40rpx;
}

.synopsis > text:first-child {
  color: #999;
}

.synopsis > text:last-child {
  margin: 20rpx 40rpx 0 0;
  line-height: 40rpx;
  letter-spacing: 1px;
}
.cast{
  display: flex;
  flex-direction: column;
  margin: 50rpx 0 0 40rpx;
}
.cast > text{
  color:#999;
}
.cast-imgs{
  width:100%;
  margin:20rpx 0 50rpx 0;
  display:flex;
  flex-direction: row;
}
.cast-box{
  display: inline-flex;
  flex-direction: column;
  text-align:center;
  width:170rpx;
  margin-right:40rpx;
}
.cast-box image{
  width:170rpx;
  height:210rpx;
}
.cast-box text{
  margin-top:10rpx;
}
