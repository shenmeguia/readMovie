.post-container{
  display:felx;
  flex-direction:column;
  margin:20rpx 0 40rpx 0;
  border-bottom:1px solid #ededed;
  padding-bottom:20rpx;
}
.post-author-date{
  margin:10rpx 0 20rpx 10rpx;
}
.post-author-date image{
  width:60rpx;
  height:60rpx;
  vertical-align:middle;
}
.post-author-date text{
  font-size:26rpx;
  margin-left:20rpx;
  vertical-align:middle;
}
.post-title{
  font-size:35rpx;
  color:#333;
  font-weight:700;
  margin:0 0 20rpx 20rpx;
  display:block;
}
.post-container > image{
  width:100%;
  height:380rpx;
}
.post-content{
  display:block;
  font-size:28rpx;
  color:#666;
  margin-bottom:20rpx;
  line-height:40rpx;
  padding:0 20rpx;
}
.post-like{
  display:flex;
  flex-direction:row;
  align-items: center;
  font-size:13px;
  margin-left:20rpx;
  color:#666;
}
.post-like image{
  width:16px;
  height:16px;
  margin-right:8px;
}
.post-like text{
  margin-right:20rpx;
}