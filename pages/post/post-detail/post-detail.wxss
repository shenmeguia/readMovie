.container{
  display:flex;
  flex-direction: column;
  position:relative;
  margin-bottom: 40rpx;
}
.container .head-img{
  width:100%;
  height:380rpx;
}
.music{
  position:absolute;
  width:102rpx;
  height:110rpx;
  left:50%;
  top:135rpx;
  margin-left:-51rpx;
  opacity:0.6;
}
.author-data{
  display:flex;
  flex-direction: row;
  margin:20rpx 0 0 30rpx;
  align-items:center;
}
.author-data image{
  width:64rpx;
  height:64rpx;
}
.author-data text{
  color:#999;
  margin-left:30rpx;
}
.title{
  margin-left:40rpx;
  font-size: 36rpx;
  font-weight:700;
  margin-top:30rpx;
  letter-spacing: 2px;
  color:#4b556c;
}
.tool{
  position:relative;
  margin-top:20rpx;
}
.tool::after{
  content:'';
  width:660rpx;
  height:1px;
  background:#e5e5e5;
  position:absolute;
  left:40rpx;
  top:46rpx;
  z-index:-10;
}
.tool image{
  width:90rpx;
  height:90rpx;
  float:right;
  margin-right:40rpx;
}
.content{
  letter-spacing:2px;
  color:#666;
  line-height:46rpx;
  margin:20rpx;
}